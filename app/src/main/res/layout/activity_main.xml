<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:id="@+id/gepEgyElet"
                android:src="@drawable/heart2"/>

            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:id="@+id/gepKetElet"
                android:src="@drawable/heart2"/>

            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:id="@+id/gepHaromElet"
                android:src="@drawable/heart2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gép"
                android:textSize="10pt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Játékos"
                android:textSize="10pt"
                />
           <ImageView
            android:layout_width="75px"
            android:layout_height="75px"
            android:id="@+id/emberEgyElet"
            android:src="@drawable/heart2"/>

            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:id="@+id/emberKetElet"
                android:src="@drawable/heart2"/>

            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:id="@+id/emberHaromElet"
                android:src="@drawable/heart2"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Döntetlenek száma:0"
        android:id="@+id/dontetlen"
        android:textSize="12pt"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kep1"
        android:src="@drawable/rock"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A te választásod"
        android:id="@+id/emberValasztas"
        android:textSize="12pt"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kep2"
        android:src="@drawable/rock"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="A gép választása"
        android:id="@+id/gepValasztas"
        android:textSize="12pt"
        />

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Eredmény: Ember: 0 Computer:0"
        android:textSize="12pt"
        android:id="@+id/eredmeny"
        /> -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/rock"
            android:id="@+id/ko"
            />
        <Button
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/paper"
            android:id="@+id/papir"/>

        <Button
            android:id="@+id/ollo"
            android:layout_width="200px"
            android:layout_height="200px"
           android:background="@drawable/scissors" />
    </LinearLayout>
</LinearLayout>